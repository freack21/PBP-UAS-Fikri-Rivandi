<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="64dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_text"
        android:text="Welcome"
        android:fontFamily="@font/rubik_bold"
        android:textSize="32dp"
        android:textColor="#000"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/please_text"
        android:layout_below="@id/welcome_text"
        android:text="Please enter your personal info"
        android:fontFamily="@font/rubik_medium"
        android:textSize="16sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginVertical="32dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullname_input"
        android:layout_below="@id/please_text"
        android:hint="Full Name"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:inputType="textShortMessage"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_input"
        android:layout_below="@id/fullname_input"
        android:hint="Email"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_input"
        android:layout_below="@id/email_input"
        android:hint="Password"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:inputType="textPassword"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_input"
        android:layout_below="@id/password_input"
        android:hint="Phone Number"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/web_input"
        android:layout_below="@id/phone_input"
        android:hint="Personal Website"
        android:fontFamily="@font/rubik"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginBottom="16dp"
        android:inputType="textUri"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/web_input"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/maroon"
        android:fontFamily="@font/rubik_bold"
        android:text="REGISTER"
        android:textColor="#fff"
        android:textStyle="bold"
        app:cornerRadius="0dp" />

</RelativeLayout>